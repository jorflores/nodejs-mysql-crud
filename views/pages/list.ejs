<%- include ('../layouts/header.ejs') %>	




<table width="80%" border="0" id="countries">

	<tr style='text-align:left; background-color:#CCC'>
		<th id="nombre">Nombre</th>
		<th id="año">Año</th>
		<th id="clasificacion">Clasificación</th>
		<th id="comentarios">Comentarios</th>
		<th id="calificacion">Calificacion</th>
		<th>Action</th>
	</tr>
	
	<!--
		Using FOREACH LOOP for the countries array
		
		myArray.forEach(function(el, index) {
			// el - current element, i - index
		});
	-->
	<% if (data) { %>


	<% data.forEach(function(videojuego){ %>
		<tr>
			<td id="nombre"><%= videojuego.nombre %></td>  
			<td id="año"><%= videojuego.año %></td>
			<td id="clasificacion"><%= videojuego.clasificacion %></td>
			<td id="comentarios"><%= videojuego.comentarios %></td>
			<td id="calificacion"><%= videojuego.calificacion %></td>
			<td>
				<div style="float:left">

					<a href='/videojuegos/edit/<%= videojuego.id %>'>Edit</a> &nbsp;							
					<form method="post" action="/videojuegos/delete/<%= videojuego.id %>" style="float:right">
						<input type="submit" name="delete" value='Delete' onClick="return confirm('Seguro que desea eliminar el registro?')" />
						<input type="hidden" name="_method" value="DELETE" />
					</form>
				</div>
			</td>
		</tr>
	<% }) %>
	<% } %>

</table>

